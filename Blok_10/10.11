import random
# Get the user's choice of dice to roll
chosen_dice = int(input("Choose a dice to roll (1 or 2): "))
# Roll the chosen dice
if chosen_dice == 1:
    dice_roll = random.randint(1, 6)
elif chosen_dice == 2:
    dice_roll = random.randint(1, 3) * 2
else:
    print("Invalid choice of dice. Must be 1 or 2.")
print("You rolled a", dice_roll)

#a)
candy_cost = [20, 22, 25, 15, 18, 21, 12, 16, 23, 27, 19, 17, 26, 14, 24, 28, 29, 32, 36, 30, 35, 31, 13, 33, 38, 42, 39, 41, 34, 40]
cheapest_candy_index = 0

list3 = [-4, 7, -2, 0, 5, -8, 9]
sum_pos = 0
count_pos = 0
sum_neg = 0
count_neg = 0
for element in list3:
    if element > 0:
        sum_pos += element
        count_pos += 1
    elif element < 0:
        sum_neg += element
        count_neg += 1
mean_pos = sum_pos / count_pos
mean_neg = sum_neg / count_neg
print(mean_pos, mean_neg)

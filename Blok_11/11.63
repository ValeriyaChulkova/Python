precipitation = [24.5, 32.1, 12.3, 15.4, 20.5, 28.7, 30.2, 31.5, 18.9, 13.2, 16.0, 22.1]
months = [3, 6, 9, 12]
total_precipitation = 0
for i in range(len(precipitation)):
    month = i % 12 + 1
    if month in months:
        total_precipitation += precipitation[i]
print("Total precipitation in March, June, September and December:", total_precipitation)

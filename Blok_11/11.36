#a)
def subtract_element(arr, kl):
  for i in range(len(arr)):
    if arr[i] > 0:
      arr[i] -= arr[kl]
    elif arr[i] < 0:
      continue
  return arr
#b)
def add_subtract(arr, n, a, B):
  for i in range(len(arr)):
    if arr[i] == 0:
      arr[i] += n
    elif arr[i] > 0:
      arr[i] -= a
    elif arr[i] < 0:
      arr[i] += B
  return arr

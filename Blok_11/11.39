#a)
def replace_multiples(arr):
  for i in range(len(arr)):
    if arr[i] % 10 == 0:
      arr[i] = 0
  return arr
#b)
def double_halve(arr):
  for i in range(len(arr)):
    if arr[i] % 2 == 0:
      arr[i] /= 2
    else:
      arr[i] *= 2
  return arr
#c)
def mod_elements(arr, t, p):
  for i in range(len(arr)):
    if arr[i] % 2 != 0:
      arr[i] -= t
    elif arr[i] % 2 == 0:
      arr[i] += p
  return arr

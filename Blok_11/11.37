def add_subtract_2(arr, al, B):
  for i in range(len(arr)):
    if arr[i] < 0:
      arr[i] += al
    elif arr[i] == 0:
      arr[i] -= B
  return arr
#b)
def add_subtract_mod(arr, a, B, c):
  for i in range(len(arr)):
    if arr[i] > 0:
      arr[i] -= a
    elif arr[i] < 0:
      arr[i] -= B
    elif arr[i] == 0:
      arr[i] += c
  return arr

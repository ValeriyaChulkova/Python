temp = [] # создание пустого списка для хранения температур
count = 0 # переменная для подсчета количества раз, когда температура опускалась ниже О °С
 
# заполнение списка температурами в течение месяца
for i in range(1, 32):
  print("Введите температуру воздуха за ", i, "день месяца:")
  t = int(input())
  temp.append(t)
 
# подсчет количества раз, когда температура опускалась ниже О °С
for t in temp:
  if t < 0:
    count += 1
 
print("Температура опускалась ниже О °С", count, "раз.")

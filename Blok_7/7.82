# а) количество пар «соседних» чисел а, равных между собой
n = int(input("Введите количество чисел: "))
a = []
for i in range(n):
  a.append(int(input("Введите число: ")))
count = 0
for i in range(n-1):
  if a[i] == a[i+1]:
    count += 1
print("Количество пар \"соседних\" чисел a, равных между собой: " + str(count))
# б) количество пар «соседних» чисел а1, равных нулю
count = 0
for i in range(n-1):
  if a[i] == 0 and a[i+1] == 0:
    count += 1
print("Количество пар \"соседних\" чисел а1, равных нулю: " + str(count))
# в) количество пар «соседних» чисел а, являющихся четными числами
count = 0
for i in range(n-1):
  if a[i] % 2 == 0 and a[i+1] % 2 == 0:
    count += 1
print("Количество пар \"соседних\" чисел а, являющихся четными числами: " + str(count))
# г) количество пар «соседних» чисел а, оканчивающихся на цифру 5
count = 0
for i in range(n-1):
  if a[i] % 10 == 5 and a[i+1] % 10 == 5:
    count += 1
print("Количество пар \"соседних\" чисел а, оканчивающихся на цифру 5: " + str(count))

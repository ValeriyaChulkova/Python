n = int(input("Введите количество чисел: "))
a = []
for i in range(n):
    a.append(float(input("Введите число: ")))
positive = 0
negative = 0
for i in a:
    if i > 0:
        positive += 1
    elif i < 0:
        negative += 1
print("Количество положительных чисел:", positive)
print("Количество отрицательных чисел:", negative)

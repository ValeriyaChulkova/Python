p = int(input("Введите натуральное число p: "))
a = []
for i in range(p):
a.append(int(input("Введите целое число a{}: ".format(i+1))))

# а) а1 + аn
sum = a[0] + a[-1]
print("Сумма первого и последнего элементов: ", sum)

# б) a2 - an-1
diff = a[1] - a[-2]
print("Разность второго и предпоследнего элементов: ", diff)

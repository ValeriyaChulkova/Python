heights = [164, 180, 172, 167, 175, 185, 170, 168, 178, 182, 176, 166, 183, 173, 171, 179, 169, 177, 181, 165, 174, 187]

total_height = 0
count = 0
for i in range(len(heights)):
    if heights[i] >= 0: # assuming all heights are positive
        total_height += heights[i]
        count += 1
average_height = total_height / count
print('Average height of men:', average_height)

cost_per_kg = float(input("Введите стоимость 1 кг конфет: "))
for i in range(10, 21): #от 10 до 20 (включительно) – это 100-200, 200-300 и т.д.
    weight = i * 100 #вес в граммах
    cost = weight / 1000 * cost_per_kg #стоимость в зависимости от веса и стоимости 1 кг
    print(f"{weight} г конфет будут стоить {cost} руб.")

a = 1 # начальное расстояние
direction = 1 # направление движения: 1 - к работе, -1 - к дому
for i in range(100): # 100 этапов
    if i % 4 == 0: # каждый четвертый этап меняем решение
        direction *= -1
    if direction == 1: # движемся к работе
        a += 2/5**(i//4) # расстояние, которое проходим на этом этапе
    else: # движемся к дому
        a -= 2/5**(i//4) # расстояние, которое проходим на этом этапе
        
print("Расстояние от дома:", a)
        
s = 0 # общий путь
for i in range(100):
    s += 2/5**(i//4) # суммируем расстояния, которые проходим на каждом этапе
    
print("Общий путь:", s)
